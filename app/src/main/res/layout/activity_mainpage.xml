<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/AppBlack"
            android:text="14일" />

        <TextView
            android:id="@+id/main_day"
            android:layout_toEndOf="@+id/main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/AppBlack"
            android:text="금요일" />

        <TextView
            android:id="@+id/main_lunar"
            android:layout_toEndOf="@+id/main_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@color/AppLightGray"
            android:text="음력 04.03" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="4dp"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/AppLightGray"
            app:cardCornerRadius="24dp"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_search" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_setting" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_back_48" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal|bottom"
            android:text="2021.05 3주차"
            android:textColor="@color/AppBlack"
            android:textSize="22dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_front_48" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.applikeysolutions.cosmocalendar.view.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:connectedDayIconPosition="top"
            app:currentDayIconRes="@drawable/ic_setting"
            app:currentDaySelectedIconRes="@drawable/ic_setting"
            app:currentDayTextColor="#f79256"
            app:firstDayOfTheWeek="sunday"
            app:orientation="horizontal"
            app:selectedDayBackgroundColor="#FFEACA"
            app:selectedDayBackgroundEndColor="#f79256"
            app:selectedDayBackgroundStartColor="#f79256"
            app:selectedDayTextColor="#FFFFFF"
            app:selectionType="range"
            app:weekendDayTextColor="#ef4550" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:background="@color/AppLightMintGray"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/main_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/AppGray"
            android:text="일정" />

        <ImageView
            android:id="@+id/main_schedule_open_close"
            android:layout_toEndOf="@+id/main_schedule"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_arrow_up_64" />

        <ImageView
            android:id="@+id/main_schedule_sort"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            app:srcCompat="@drawable/ic_sort_down_64"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_schedule_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:background="@color/AppLightMintGray"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/main_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/AppGray"
            android:text="완료" />

        <ImageView
            android:id="@+id/main_complete_open_close"
            android:layout_toEndOf="@+id/main_complete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_arrow_up_64" />

        <ImageView
            android:id="@+id/main_complete_sort"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            app:srcCompat="@drawable/ic_sort_down_64"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_complete_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_add_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_upside"
        app:cardCornerRadius="30dp"
        android:elevation="24dp"
        >

        <RelativeLayout
            android:id="@+id/main_add_relayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/main_category"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="17dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/ic_category_black_64" />

            <ImageView
                android:id="@+id/main_calendar"
                android:layout_toEndOf="@+id/main_category"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/ic_calendar_black_48" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/AppLightMintGray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/main_add_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/ic_plus_white_52" />

                    <TextView
                        android:id="@+id/main_add_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/white"
                        android:text="할일추가" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>