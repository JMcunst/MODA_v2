<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp">


    <ImageView
        android:id="@+id/main_schedule_item_img_category"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_account"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/main_schedule_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/AppBlack"
            android:text="μ½”ν’λ―Έν…" />

        <ImageView
            android:id="@+id/main_schedule_item_pin"
            android:layout_below="@+id/main_schedule_item_content"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_add_a_photo" />

        <ImageView
            android:id="@+id/main_schedule_item_memo"
            android:layout_toRightOf="@+id/main_schedule_item_pin"
            android:layout_below="@+id/main_schedule_item_content"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_calendar_black_48" />

        <TextView
            android:id="@+id/main_schedule_item_date"
            android:layout_toRightOf="@+id/main_schedule_item_memo"
            android:layout_below="@+id/main_schedule_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/AppGray"
            android:text="2021.05.17" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_down_48"
        />
</LinearLayout>